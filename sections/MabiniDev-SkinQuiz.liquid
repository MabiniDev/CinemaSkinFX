    padding: 10px 20px;
    font-size: 0.9rem;
  }
}

/* Tablet Responsiveness */
@media (min-width: 769px) and (max-width: 1024px) {
  .options-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quiz-content {
    padding: 35px 25px;
  }
}

/* Small mobile screens */
@media (max-width: 480px) {
  .quiz-title {
    font-size: 1.4rem;
  }
  
  .question-title {
    font-size: 1.3rem;
  }
  
  .option-card {
    padding: 16px;
  }
  
  .nav-btn {
    padding: 8px 16px;
    font-size: 0.85rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const quizData = {
    currentQuestion: 1,
    totalQuestions: 5,
    answers: {}
  };

  const progressFill = document.getElementById('progressFill');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const questionSlides = document.querySelectorAll('.question-slide');
  const optionCards = document.querySelectorAll('.option-card');

  // Handle option selection
  optionCards.forEach(card => {
    card.addEventListener('click', function() {
      const questionSlide = this.closest('.question-slide');
      const questionNum = questionSlide.dataset.question;
      const value = this.dataset.value;

      // Remove selected class from other options in this question
      questionSlide.querySelectorAll('.option-card').forEach(c => c.classList.remove('selected'));
      
      // Add selected class to clicked option
      this.classList.add('selected');
      
      // Store answer
      quizData.answers[questionNum] = value;
      
      // Enable next button
      nextBtn.disabled = false;
    });
  });

  // Handle navigation
  nextBtn.addEventListener('click', function() {
    if (quizData.currentQuestion < quizData.totalQuestions) {
      quizData.currentQuestion++;
      updateQuiz();
    } else {
      // Show results
      showResults();
    }
  });

  prevBtn.addEventListener('click', function() {
    if (quizData.currentQuestion > 1) {
      quizData.currentQuestion--;
      updateQuiz();
    }
  });

  function updateQuiz() {
    // Update progress bar
    const progress = (quizData.currentQuestion / quizData.totalQuestions) * 100;
    progressFill.style.width = progress + '%';

    // Show current question
    questionSlides.forEach((slide, index) => {
      slide.classList.toggle('active', index + 1 === quizData.currentQuestion);
    });

    // Update navigation buttons
    prevBtn.disabled = quizData.currentQuestion === 1;
    
    // Check if current question has an answer
    const hasAnswer = quizData.answers[quizData.currentQuestion];
    nextBtn.disabled = !hasAnswer;
    
    // Update next button text
    if (quizData.currentQuestion === quizData.totalQuestions) {
      nextBtn.textContent = 'Get My Results';
    } else {
      nextBtn.textContent = 'Next';
    }

    // Restore selected option if returning to previous question
    if (hasAnswer) {
      const currentSlide = document.querySelector(`[data-question="${quizData.currentQuestion}"]`);
      const savedOption = currentSlide.querySelector(`[data-value="${hasAnswer}"]`);
      if (savedOption) {
        savedOption.classList.add('selected');
      }
    }
  }

  function showResults() {
    // Update progress to 100%
    progressFill.style.width = '100%';
    
    // Show results slide
    questionSlides.forEach(slide => slide.classList.remove('active'));
    document.querySelector('[data-question="results"]').classList.add('active');
    
    // Hide navigation
    document.querySelector('.quiz-navigation').style.display = 'none';
    
    // Simulate loading and redirect to results
    setTimeout(() => {
      // Here you would typically send the quiz data to your server
      // and redirect to a results page with product recommendations
      console.log('Quiz Results:', quizData.answers);
      
      // Example: redirect to results page with quiz data
      // window.location.href = `/pages/skincare-results?data=${encodeURIComponent(JSON.stringify(quizData.answers))}`;
      
      // For demo purposes, show an alert
      alert('Quiz completed! Results would be shown here.');
    }, 3000);
  }

  // Initialize quiz
  updateQuiz();
});
</script>

