    min-height: 350px;
  }
  
  .question-title {
    font-size: 1.5rem;
    margin-bottom: 25px;
  }
  
  .options-grid {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .option-card {
    padding: 20px;
  }
  
  .option-card h4 {
    font-size: 1.2rem;
  }
  
  .quiz-navigation {
    padding: 20px;
  }
  
